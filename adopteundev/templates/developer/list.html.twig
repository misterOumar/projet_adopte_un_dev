{% extends 'base.html.twig' %}

{% block title %}
	Developpeurs
{% endblock %}

{% block body %}

{# <div class="eg-preloder"></div> #}
<!-- ========== Inner Banner Start============= -->
	<div class="inner-banner"> <div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="banner-content text-center">
					<h1>Developpeurs</h1>
					<span></span>
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item">
								<a href="index.html">Home</a>
							</li>
							<li class="breadcrumb-item active" aria-current="page">Developpeurs
							</li>
						</ol>
					</nav>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- ========== Inner Banner end============= -->

<!-- ========== Job Listing Start============= -->
<div class="job-listing-area pt-120 mb-120">
	<div class="container">
		<div class="row g-lg-4 gy-5">
			<div class="col-lg-4 order-lg-1 order-2">
				{{ form_start(form) }}
				<div class="job-sidebar">
					<div class="job-widget mb-20">
						<div class="input-area">
							<h5 class="job-widget-title mb-15">Experience</h5>

							<div class="salary-container">
								<label
									class="containerss">{# <span class="qty">(30)</span> #}
								</label>
								{{ form_widget(form.valeur) }}
							</div>
						</div>
					</div>
					<div class="job-widget style-1 mb-20">
						<div class="check-box-item">
							<h5 class="job-widget-title">Categorie</h5>
							<div class="checkbox-container">
								<ul>
									{% for choice in form.categorie  %}
										<li>
											<label class="containerss">
												<input type="checkbox">
												<span class="checkmark"></span>
												{{ form_widget(choice) }}
												<span class="text">{{ choice.vars.label }}</span>

											</label>
										</li>
									{% endfor  %}
								</ul>

							</div>
						</div>
					</div>
					<div class="job-widget mb-20">
						<div class="check-box-item">
							<h5 class="job-widget-title">Techonologie</h5>
							<div class="checkbox-container">
								<label class="containerss">
									<input type="text">
									<span class="text">INPUT POUR LA TECH</span>

								</label>
							</div>
						</div>
					</div>
					<div class="job-widget mb-20">
						<div class="check-box-item">
							<h5 class="job-widget-title">Niveau d'expérience</h5>
							<div class="checkbox-container">
								<ul>
									{% for choice in form.experience  %}
										<li>
											<label class="containerss">
												<input type="checkbox">
												<span class="checkmark"></span>
												{{ form_widget(choice) }}
												<span class="text">{{ choice.vars.label }}</span>

											</label>
										</li>
									{% endfor  %}
								</ul>

							</div>
						</div>
					</div>
					<div class="job-widget mb-20">
						<div class="input-area">
							<h5 class="job-widget-title mb-15">Salaire Minimum</h5>

							<div class="salary-container">
								<label
									class="containerss">{# <span class="qty">(30)</span> #}
								</label>
								{{ form_widget(form.salaireMin) }}
							</div>
						</div>
					</div>

				</div>
				{{ form_end(form) }}
			</div>
			<div class="col-lg-8 order-lg-2 order-1">
				<div class="job-listing-wrrap">
					<div class="row g-4 mb-25">
						<div class="col-lg-6 d-flex align-items-center">
							<p class="show-item">Affichage de
								{{ pagination|length }}
								résultats sur
								{{ pagination.getTotalItemCount }}
								développeurs</p>
						</div>
						<div class="col-lg-6 d-flex align-items-center justify-content-lg-end">
							<div class="grid-select-area">
								<div class="select-area">
									<select class="select1">
										<option value="0">Sort By(Default)</option>
										<option value="1">Full Time</option>
										<option value="2">Part Time</option>
										<option value="3">Remote</option>
										<option value="3">Internship</option>
										<option value="3">Freelance</option>
									</select>
								</div>
							</div>
						</div>
					</div>

					<!-- Liste des développeurs -->
					<div class="row ">
						{% if pagination|length > 0 %}
							{% for developer in pagination %}
								<div class="col-lg-12 mb-30">
									<div class="job-listing-card">
										<div class="job-top">
											<div class="job-list-content">
												<div class="company-area">
													<div class="logo">
														<img src="assets/images/bg/company-logo/company-01.png" alt="">
													</div>
													<div class="company-details">
														<div class="name-location">
															<h5>
																<a href="{{ path('app_dev_details', {'uuid': developer.user.uuid}) }}">{{ developer.nom }}
																	{{ developer.prenom }}</a>
															</h5>
															<p>
																<a href="{{ path('app_dev_details', {'uuid': developer.user.uuid}) }}">{{ developer.cat.nom }}</a>
															</p>
														</div>
													</div>
												</div>
												<div class="job-discription">
													<ul class="list-unstyled fa-ul">
														<li>
															<p>
																<span class="title">Ville :</span>
															</p>
															<p>
																{{developer.ville}}</p>
														</li>
													</p>
												</li>
												<li>
													<p>
														<span class="title">Salaire Min :</span>
													</p>
													<p>
														{{developer.salaireMin}}
													</p>
												</li>
											</p>
										</li>
										<li>
											<p>
												<span class="title">Tel :</span>
											</p>
											<p>
												{{developer.mobile}}
											</p>
										</li>
									</p>
								</li>
								<li>
									<p>
										<span class="title">Email :</span>
									</p>
									<p>
										{{developer.user.email}}
									</p>
								</li>
							</p>
						</li>
					</ul>
				</div>
			</div>
			<div class="bookmark">
				<i class="bi bi-bookmark-fill"></i>
			</div>
		</div>
		<div class="job-type-apply">
			<div class="job-type">
				<span class="light-green">Full Time</span>
				<span class="light-purple">Part Time</span>
				<span class="light-blue">Remote</span>
			</div>
			<div class="apply-btn">
				<a href="{{ path('app_dev_details', {'uuid': developer.user.uuid}) }}">
					<span><img src="assets/images/icon/apply-ellipse.svg" alt=""></span>Voir détails</a>
			</div>
		</div>
	</div>
</div>{% endfor %}{% else %}<!-- Message si aucun développeur trouvé --><div class="alert alert-warning text-center w-100">
<i class="fas fa-exclamation-circle"></i>
Aucun développeur ne correspond à votre recherche.</div>{% endif %}

<div class="col-lg-12 d-flex justify-content-center">
		<div class="pagination-area">
	<nav aria-label="Pagination">
    <ul class="pagination">
        {# Bouton Précédent (toujours affiché mais désactivé sur la première page) #}
        <li class="page-item {% if pagination.currentPageNumber == 1 %}disabled{% endif %}">
            <a class="page-link" href="{% if pagination.currentPageNumber > 1 %}{{ path('app_dev_list', {'page': pagination.currentPageNumber - 1}) }}{% else %}#{% endif %}"></a>
        </li>

        {# Numéros de page #}
        {% for page in pagination.paginationData.pagesInRange %}
            <li class="page-item {% if page == pagination.currentPageNumber %}active{% endif %}">
                <a class="page-link" href="{{ path('app_dev_list', {'page': page}) }}">{{ page }}</a>
            </li>
        {% endfor %}

        {# Bouton Suivant (toujours affiché mais désactivé sur la dernière page) #}
        <li class="page-item {% if pagination.currentPageNumber == pagination.paginationData.pageCount %}disabled{% endif %}">
            <a class="page-link" href="{% if pagination.currentPageNumber < pagination.paginationData.pageCount %}{{ path('app_dev_list', {'page': pagination.currentPageNumber + 1}) }}{% else %}#{% endif %}"></a>
        </li>
    </ul>
</nav>

</div>
</div>
</div></div></div></div></div></div>

<!-- ========== Job Listing e nd============= -->

{% endblock %}
