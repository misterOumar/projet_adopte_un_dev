{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<div class="login-area pt-120 mb-120">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 ">
					<div class="form-wrapper">
						<div class="form-title">
							<h3>Réinitialiser votre mot de passe !</h3>
							<span></span>
						</div>


						{{ form_start(resetForm) }}

						{% if form_errors(resetForm.plainPassword.first) is not empty %}

							<!--begin::Alert message-->
							<div class="alert alert-danger d-flex align-items-center p-5">
								<div class="d-flex flex-column">
									<small>
										{{ form_errors(resetForm.plainPassword.first) }}

									</small>
								</div>
							</div>
							<!--end::Alert-->
						{% endif %}

						<div class="col-lg-12 mb-2">
							<div class="form-inner">
								<label for="email">Nouveau mot de passe *</label>
								{{ form_widget(resetForm.plainPassword.first) }}


								<i class="bi bi-eye-slash" id="togglePassword"></i>
							</div>


						</div>
						<div class="col-lg-12 mb-2">
							<div class="form-inner">
								<label for="email">Repetez le mot de passe *</label>
								{{ form_widget(resetForm.plainPassword.second) }}


								<i class="bi bi-eye-slash" id="togglePassword"></i>
							</div>


						</div>


						<button class="primry-btn-2">Réinitialiser mon mot de passe</button>

						{{ form_end(resetForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
