{% extends 'base.html.twig' %}

{% block title %}Dashboard Entreprise!
{% endblock %}

{% block body %}
	<!-- ========== Dashboard Area end============= -->
	<div class="dashboard-area company-dashboard pt-120 mb-120">
		<div class="container">
			<div class="row g-lg-4">
				{% include "company/menu_company.html.twig" %}
				<div class="col-lg-12">
					<div class="dashboard-inner">
						<div class="author-and-action-btn-area two mb-40">
							<div class="author-area two">
								<div class="author-img">
									<img src="{{asset('assets/images/bg/company-img2.png')}}" alt="">
								</div>
								<div class="author-content">
									<span>Bonjour ,</span>
									<h4>
										{{company.nom}}
									</h4>
								</div>
							</div>

							<div class="action-btn-group">
								<ul>
									<li>
										<a href="company-profile.html">
											<span>
												<img src="{{asset('assets/images/icon/edit2.svg')}}" alt=""></span>Edit Profile</a>
									</li>
								</li>
							</ul>
						</div>
					</div>

					<div class="counter-area">
						<div class="row g-4 justify-content-center mb-30">
							<div class="col-lg-3 col-sm-6">
								<div class="counter-single">
									<div class="counter-icon">
										<img src="{{ asset('assets/images/icon/tt-applied.svg') }}" alt="image">
									</div>
									<div class="coundown">
										<p>Total Applied</p>
										<div class="d-flex align-items-center">
											<h3 class="odometer">
												30
											</h3>
											<span>+</span>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-3 col-sm-6">
								<div class="counter-single two">
									<div class="counter-icon">
										<img src="{{ asset('assets/images/icon/save-job.svg') }}" alt="image">
									</div>
									<div class="coundown">
										<p>Live Jobs</p>
										<div class="d-flex align-items-center">
											<h3 class="odometer">
												80
											</h3>
											<span>+</span>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-3 col-sm-6">
								<div class="counter-single three">
									<div class="counter-icon">
										<img src="{{asset('assets/images/icon/pending-icon.svg')}}" alt="image">
									</div>
									<div class="coundown">
										<p>Pending Job</p>
										<div class="d-flex align-items-center">
											<h3 class="odometer">
												120
											</h3>
											<span>+</span>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-3 col-sm-6">
								<div class="counter-single four">
									<div class="counter-icon">
										<img src="{{asset('assets/images/icon/closed-icon.svg')}}" alt="image">
									</div>
									<div class="coundown">
										<p>Closed Jobs</p>
										<div class="d-flex align-items-center">
											<h3 class="odometer">
												900
											</h3>
											<span>+</span>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="row g-4 justify-content-cente">
							<div class="col-lg-3 col-sm-6">
								<div class="counter-single">
									<div class="counter-icon">
										<img src="{{asset('assets/images/icon/total-view-icon.svg')}}" alt="image">
									</div>
									<div class="coundown">
										<p>Total View</p>
										<div class="d-flex align-items-center">
											<h3 class="odometer">
												2500
											</h3>
											<span>+</span>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="new-applied-job-area">
						<h5>Nouvelle liste de candidatures:</h5>
						<div class="table-wrapper2">
							<table class="eg-table table category-table mb-0">
								<tbody>
									{% for candidature in candidatures %}
										<tr>
											<td data-label="Nom du Candidat">
												<div class="employee-info">
													<div class="employee-img">
														<img src="{{ asset('images/avatar/' ~ candidature.developer.user.avatar.reference) }}" alt="">
													</div>
													<div class="employee-content">
														<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#candidatureModal{{ candidature.id }}">
															{{ candidature.developer.nom }}
															{{ candidature.developer.prenom }}
														</button>
														<span>
															<img src="{{ asset('assets/images/icon/company-2.svg') }}" alt="">
															{{ candidature.developer.cat.nom }}
														</span>
														<p>
															<span>Envoyé le:</span>
															{{ candidature.date|date('d M, Y') }}
														</p>
													</div>
												</div>
											</td>
											<td data-label="Résumé de carrière">
												<div class="carrer-summary">
													<h6>{{ candidature.poste.titre }}
													</h6>
													<ul>
														<li>
															<span>Experience:</span>
															{{ candidature.developer.experience }}+ Years
														</li>
														<li>
															<span>Salary:</span>
															{{ candidature.developer.salaireMin }}
															/ mois
														</li>
													</ul>
												</div>
											</td>
											<td data-label="Résumé de carrière">
												<div class="carrer-summary">
													<h5>Titre du poste
													</h5>
													<h5>{{ candidature.poste.titre }}
													</h5>
												</div>
											</td>
											<td data-label="Actions">
												<div class="action-btn-group">
													<ul>
														<li>
															<form method="post" action="{{ path('app_candidature_accepter', {'uuid': candidature.uuid}) }}" style="display:inline;">
																<button type="submit"><img src="{{ asset('assets/images/icon/shortlist-icon.svg') }}" alt="">
																	Accepter
																</button>
															</form>
														</li>
														<li>
															<form method="post" action="{{ path('app_candidature_rejeter', {'uuid': candidature.uuid}) }}" style="display:inline;">
																<button type="submit" class="reject"><img src="{{ asset('assets/images/icon/rejected-icon.svg') }}" alt="">
																	Rejeter
																</button>
															</form>
														</li>
													</ul>
												</div>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>

				</div>

			</div>
		</div>
	</div>
	<!-- ========== Dashboard Area end============= -->
{% endblock %}
